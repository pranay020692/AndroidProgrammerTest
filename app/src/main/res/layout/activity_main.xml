<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_coding_tasks"
    tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110pt"
        android:layout_height="25pt"
        android:id="@+id/button"
        android:onClick="onChatButtonClicked"
        android:background = "@drawable/btn_main_chat"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110pt"
        android:layout_height="25pt"
        android:layout_marginBottom="8dp"
        android:background = "@drawable/btn_main_login"
        android:id="@+id/button2"
        android:onClick="onLoginButtonClicked"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="110pt"
        android:layout_height="25pt"
        android:layout_marginBottom="8dp"
        android:background = "@drawable/btn_main_animation"
        android:id="@+id/button3"
        android:onClick="onAnimationTestButtonClicked"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CODING TASKS"
        android:id="@+id/textTitle"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
